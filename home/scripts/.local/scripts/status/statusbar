#!/bin/bash


battery ()
{
val=$(acpi | grep -oh "[[:digit:]]*%" | grep -oh "[0-9]*")

case $val in
  [1-9][0-9][0-9])
  echo "ğŸ”‹ val%"
  ;;
  [5-9][0-9])
  echo "ï‰  $val%"
  ;;
[1-4][0-9])
  echo "ï‰‚  $val%"
  ;;
[1-9])
  echo "ï‰ƒ  $val%"
  ;;
0)
  echo "ï‰„   "
  ;;
*)
  echo "ğŸ”‹ $val %"
  ;;
esac
}


volume ()
{
                                #maybe change to Right, Left, Mono
val=$(amixer sget Master | grep 'Left:' | awk -F'[][]' '{ print $2 }'| grep -oh "[0-9]*")
case $val in
  100)
  echo ğŸ”Š $val%
  ;;
  [5-9][0-9])
  echo ğŸ”‰ $val%
  ;;
[1-4][0-9])
  echo ğŸ”ˆ $val%
  ;;
[1-9])
  echo ğŸ”ˆ $val%
  ;;
0)
  echo ğŸ”‡
  ;;
esac
}

diskspace ()
{
                        #might be another /dev/sda...
  echo ğŸ’½ $(df -h | grep sda2 | grep -oh "[0-9]*%")
}

wifi ()
{
 name=$(connmanctl services | grep  "*A" | grep -oh "^*A. [A-Za-z]*" | grep -oh "[[:space:]][A-Za-x]*")
if [ $name != " " ];
  then
    echo ğŸŒ $name
  else
   echo ïª© off
  fi
}

layout () 
{
  echo ğŸŒ  $(xkblayout-state print %s)
}

timeanddate ()
{
  echo ğŸ•‘ $(date +'%T') #%r
}


calendar ()
{
  echo ğŸ“… $(date +'%d/%m/%Y')
}

echo "[$(wifi)] [$(battery)] [$(volume)] [$(layout)] [$(diskspace)] [$(timeanddate) $(calendar)]"

