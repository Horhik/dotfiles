      function		= FOCUS
      recolorable	= TRUE
      file		= "List/tab-focus.png"
      border		= { 1, 1, 1, 1 }
      stretch		= TRUE
    }
    image
    {
      function		= BOX
      recolorable	= TRUE
      state		= PRELIGHT
      file		= "List/tab-prelight.png"
      border		= { 3, 2, 1, 3 }
      stretch		= TRUE
    }
    image
    {
      function		= BOX
      recolorable	= TRUE
      state		= SELECTED
      file		= "List/tab-selected.png"
      border		= { 3, 2, 1, 3 }
      stretch		= TRUE
    }
    image
    {
      function		= BOX
      recolorable	= TRUE
      state		= ACTIVE
      file		= "List/tab-active.png"
      border		= { 2, 2, 3, 2 }
      stretch		= TRUE
    }
    image
    {
      function		= BOX
      recolorable	= TRUE
      state		= NORMAL
      file		= "List/tab-normal.png"
      border		= { 3, 2, 1, 3 }
      stretch		= TRUE
    }
    image
    {
      function		= BOX
      recolorable	= TRUE
      state		= INSENSITIVE
      file		= "List/tab-insensitive.png"
      border		= { 3, 2, 1, 3 }
      stretch		= TRUE
    }
  }
}
